# Supply Chain Optimization - Environment Configuration
# =====================================================
# Copy this file to .env and customize for your environment
# DO NOT commit .env files to version control!

# ============================================================================
# ENVIRONMENT SETTINGS
# ============================================================================

# Environment: development, staging, or production
ENVIRONMENT=development

# Enable debug mode (more verbose logging)
DEBUG=true

# ============================================================================
# OPTIMIZATION PARAMETERS
# ============================================================================

# Default service level target (0.5 to 0.999)
SERVICE_LEVEL=0.95

# Default annual holding cost rate (0.01 to 1.0)
HOLDING_COST_RATE=0.25

# Number of products for sample data generation
N_PRODUCTS=50

# Number of time periods (days) in sample data
N_PERIODS=365

# Number of demand scenarios for stochastic optimization
DEMAND_SCENARIOS=1000

# Forecast horizon in days
FORECAST_HORIZON=30

# ============================================================================
# LOGGING SETTINGS
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (leave empty for no file logging)
LOG_FILE=logs/app.log

# Enable console logging
LOG_TO_CONSOLE=true

# Enable file logging
LOG_TO_FILE=true

# ============================================================================
# STREAMLIT SETTINGS
# ============================================================================

# Streamlit server port
STREAMLIT_PORT=8501

# Streamlit server address
STREAMLIT_ADDRESS=0.0.0.0

# ============================================================================
# CACHE SETTINGS
# ============================================================================

# Enable caching
CACHE_ENABLED=true

# Cache time-to-live in seconds
CACHE_TTL=3600

# Redis connection URL (if using Redis for caching)
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# DATABASE SETTINGS (Future use)
# ============================================================================

# Database connection URL
# Examples:
#   PostgreSQL: postgresql://user:password@localhost:5432/dbname
#   MySQL: mysql://user:password@localhost:3306/dbname
#   SQLite: sqlite:///path/to/database.db
# DATABASE_URL=

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# Secret key for encryption (CHANGE THIS IN PRODUCTION!)
# Generate with: python -c "import os; print(os.urandom(32).hex())"
SECRET_KEY=changeme-in-production

# Enable authentication
ENABLE_AUTH=false

# Authentication username
AUTH_USERNAME=admin

# Authentication password (use a strong password in production!)
# AUTH_PASSWORD=

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================

# Enable parallel processing
PARALLEL_PROCESSING=true

# Number of parallel jobs (-1 = use all CPU cores)
N_JOBS=-1

# ============================================================================
# FILE PATHS
# ============================================================================

# Data directory
DATA_DIR=data

# Models directory
MODELS_DIR=models

# Logs directory
LOGS_DIR=logs

# Reports directory
REPORTS_DIR=reports

# ============================================================================
# MONITORING SETTINGS (Future use)
# ============================================================================

# Enable Prometheus metrics
ENABLE_MONITORING=false

# Metrics server port
METRICS_PORT=9090

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================

# For production deployment, also consider:
#
# 1. Set ENVIRONMENT=production
# 2. Set DEBUG=false
# 3. Use strong SECRET_KEY (generate random value)
# 4. Set ENABLE_AUTH=true with strong passwords
# 5. Configure DATABASE_URL if using persistent storage
# 6. Set REDIS_URL if using distributed caching
# 7. Enable ENABLE_MONITORING=true for production monitoring
# 8. Configure LOG_FILE for persistent logs
# 9. Set appropriate resource limits (N_PRODUCTS, DEMAND_SCENARIOS)
# 10. Review and test all security settings
